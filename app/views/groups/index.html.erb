<div class="nav_container">

<h1 class='category_title'>Category</h1>
<%= link_to destroy_user_session_path, method: :delete, class: "icons" do %>
  <i class="fas fa-sign-out-alt fa-2x"></i>
<% end %>
</div>
<div class="total_ctn">
<p>Total expended: </p><p class='value_sum'>$<%= @expenses %></p>
</div>
<ul>
<% @groups.each do |group| %>
<%= link_to group_entities_path(group.id) do %>
  <li class="category_li">
  <div class="category_content">
    <%= image_tag 'test_img.jpg', alt: 'category', class: 'category_image'%>
    <div>
    <h3><%= group.name %></h3>
    <p><%= group.created_at.strftime("%d %b %Y")%></p>
    </div>
  </div>  
    <p class="entity_content value_sum">$<%= group.expenses_group_sum %></p>   
  </li>
  <% end %>
<% end %>
</ul>
<div class="category_btn_cnt">
<%= link_to 'New Category', new_group_path, class:"category_btn" %>
</div>